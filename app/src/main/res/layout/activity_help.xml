<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".ui.activity.mine.HelpActivity">

    <Button
        android:layout_width="@dimen/dp_328"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_359"
        android:background="@drawable/dialog_btn_agree_bg"
        android:text="@string/submit"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/message_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_92"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_16" />

    <include
        android:id="@+id/help_bar"
        layout="@layout/help_bar" />
</RelativeLayout>