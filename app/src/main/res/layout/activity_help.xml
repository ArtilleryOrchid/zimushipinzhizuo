<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".ui.activity.mine.HelpActivity">

    <Button
        android:id="@+id/submit"
        android:layout_width="@dimen/dp_328"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_359"
        android:background="@drawable/dialog_btn_agree_bg"
        android:text="@string/submit"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="@dimen/dp_328"
        android:layout_height="@dimen/dp_212"
        android:layout_below="@id/message_all"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_23"
        android:background="@drawable/shape_circle_while_bg">

        <EditText
            android:id="@+id/id_editor_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="top"
            android:maxLength="400"
            android:minLines="6"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/id_editor_detail_font_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/string_editor_detail_default_font"
            android:textColor="@color/general_click_bg_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


    <TextView
        android:id="@+id/message_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_92"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_16" />

    <include
        android:id="@+id/help_bar"
        layout="@layout/activity_toolbar" />
</RelativeLayout>