<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/dp_13"
            android:src="@drawable/blank_back"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="@dimen/dp_22"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_155"
            android:text="请输入手机号～"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="为了方便您的查询，请输入您的手机号"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:inputType="phone"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号码" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/colorDark"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_height="wrap_content">
            <com.keyi.zimushipinzhizuo.ui.widget.span.CountdownButton
                android:id="@+id/get_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ff56abfb"
                android:textSize="@dimen/sp_14" />
            <EditText
                android:id="@+id/access"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:background="@null"
                android:layout_height="@dimen/dp_50"
                android:hint="请输入验证码" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_below="@id/access"
                android:background="@color/colorDark"/>
        </RelativeLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="@dimen/dp_251"
            android:layout_height="@dimen/dp_43"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_150"
            android:background="@drawable/dialog_btn_agree_bg"
            android:gravity="center_horizontal|center_vertical"
            android:text="登录/注册"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》《隐私政策》"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff3099fb"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>